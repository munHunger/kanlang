{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kanlang",
  "patterns": [
    {
      "include": "#identifier"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operator"
    },
    {
      "include": "#literal"
    },
    {
      "include": "#comment"
    }
  ],
  "repository": {
    "identifier": {
      "name": "entity.name.function",
      "match": "\\b(text|validate|replace|save)\\b"
    },
    "keyword": {
      "patterns": [
        {
          "name": "keyword.control.kanlang",
          "match": "(if|else|for|while|return)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "keyword.control.kanlang",
          "match": ","
        },
        {
          "name": "keyword.control.kanlang",
          "match": "\\{"
        },
        {
          "name": "keyword.control.kanlang",
          "match": "\\}"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "name": "keyword.operator.kanlang",
          "match": "(\\+|=)"
        }
      ]
    },
    "literal": {
      "name": "string.kanlang",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.kanlang",
          "match": "\\\\."
        },
        {
          "name": "punctuation.term.kanlang",
          "begin": "\\{",
          "beginCaptures": {
            "0": {
              "name": "meta.brace.curly.kanlang"
            }
          },
          "end": "\\}",
          "endCaptures": {
            "0": {
              "name": "meta.brace.curly.kanlang"
            }
          },
          "patterns": [
            {
              "include": "#operator"
            },
            {
              "include": "#literal"
            }
          ]
        }
      ]
    },
    "comment": {
      "patterns": []
    }
  },
  "scopeName": "text.kanlang"
}
